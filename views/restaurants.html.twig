<html>
    <head>
        <title>Bestaurants.edu</title>
    </head>
    <body>
        <div class='container'>
            <h1>Bestaurants.edu</h1>

            {% if restaurants is not empty %}
                <p>Here are all your restaurants:</p>
                <ul>
                    {% for restaurant in restaurants %}
                        <li>{{ restaurant.getName }}</li>
                    {% endfor %}
                </ul>
            {% endif %}

            <form action='/restaurants' method='post'>
                <label for='name'>Restaurant Name</label>
                <input id='name' name='name' type='text' required>

                <button type='submit' class='btn-success'>Add restaurant</button>
            </form>
            <form action='/delete_restaurants' method='post'>
                <button type='submit' class='btn-info'>Clear</button>
            </form>

            <p><a href='/'>Home</a></p>
        </div>
    </body>
</html>
