<html>
    <head>
        <title>Bestaurants.edu</title>
    </head>
    <body>
        <h1>{{ cuisine.getName }}</h1>

        {% if restaurants is not empty %}
            <p>Here are the restaurants:</p>
            <p><em>Click on restaurant names to read or leave reviews</em></p>
            <ul>
                {% for restaurant in restaurants %}
                    <li><a href="/restaurant/{{ restaurant.getId }}">{{ restaurant.getName }}</a></li>
                    <ul>
                      <li>{{ restaurant.getDescription }}</li>
                    </ul>
                {% endfor %}
            </ul>
        {% endif %}

        <h4>Add a restaurant</h4>

        <form name="restaurant_name_input" action='/restaurants' method='post'>
            <input id="cuisine_id" name="cuisine_id" type="hidden" value="{{ cuisine.getId() }}">
            <label for='name'>Restaurant Name: </label>
            <input id='name' name='name' type='text'>

            <label for='description'>Restaurant Description: </label>
            <input id='description' name='description' type='text'>


            <button name="restaurant_name_input" type='submit'>Add restaurant</button>
        </form>
        <p><a href="/cuisines/{{ cuisine.getId }}/edit">Edit this cuisine group</a></p>
        <p><a href='/'>Home</a></p>
    </body>
</html>
